{% extends 'base.html.twig' %}

{% block title %}Hello FoodController!{% endblock %}

{% block body %}
    <div class="mb-3">
        <h3 style="display: inline-block;">Les recettes de {{ user.name }}</h3>
    </div>

    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for food in foods %}
            <tr>
                <td>{{ food.name }}</td>
                <td colspan="2">
                    <p>
                        <a class="btn btn-info" href="{{ path('food_show', {'id': food.id}) }}">voir</a>
                    </p>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
