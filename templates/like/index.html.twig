{% extends 'base.html.twig' %}

{% block title %}Hello LikeController!{% endblock %}

{% block body %}
    <div class="mb-4">
        <h3>J'aime</h3>
    </div>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Vue</th>
            <th scope="col">J'aime</th>
            <th scope="col">Cr√©ateur</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for food in foods %}
            <tr>
                <td>
                    <a href="{{ path('food_show', {'id': food.id}) }}">{{ food.name }}</a>
                </td>
                <td>{{ food.views|length }}</td>
                <td>{{ food.likes|length }}</td>
                <td>{{ food.user.name }}</td>
                <td>
                    <a class="btn btn-danger" href="{{ path('dislike', {'id': food.id}) }}">ne plus aimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">
                    Aucune recette aimer
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
